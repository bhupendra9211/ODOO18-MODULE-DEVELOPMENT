<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_custom_button.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('control-buttons-modal')]" position="inside">
            <!-- Add your custom button after Refund button -->
            <button class="btn btn-danger btn-lg py-5" t-on-click="applyQuickDiscount">
                <i class="fa fa-percent me-1"/>Quick 10% Off
            </button>
        </xpath>
    </t>
</templates>